@{
    ViewBag.Title = "Ödeme Başarısız";
}

<div class="container my-5 d-flex justify-content-center">
    <div class="card shadow-lg p-4 w-100" style="max-width: 600px;">
        <div class="text-center mb-4">
            <div class="mb-3">
                <i class="bi bi-x-circle-fill text-danger" style="font-size: 4rem;"></i>
            </div>
            <h2 class="text-danger mb-3">
                <strong>❌ Ödeme Başarısız</strong>
            </h2>
            <p class="text-muted">İşleminiz tamamlanamadı. Lütfen tekrar deneyiniz.</p>
        </div>

        <div class="bg-light rounded p-4 mb-4" style="border-left: 4px solid #dc3545;">
            <h5 class="mb-3 text-secondary">
                <i class="bi bi-exclamation-triangle me-2"></i>Hata Detayları
            </h5>

            <div class="alert alert-danger mb-3">
                <i class="bi bi-exclamation-circle me-2"></i>
                <strong>Hata Mesajı:</strong><br>
                @(ViewBag.Error ?? "Bilinmeyen bir hata oluştu.")
            </div>

            @if (ViewBag.ErrorCode != null)
            {
                <div class="row mb-2">
                    <div class="col-sm-4"><strong>Hata Kodu:</strong></div>
                    <div class="col-sm-8">
                        <span class="badge bg-danger">@ViewBag.ErrorCode</span>
                    </div>
                </div>
            }

            @if (ViewBag.MdStatus != null)
            {
                <div class="row mb-2">
                    <div class="col-sm-4"><strong>3D Secure:</strong></div>
                    <div class="col-sm-8">
                        <span class="badge bg-warning text-dark">mdStatus: @ViewBag.MdStatus</span>
                    </div>
                </div>
            }

            <div class="row mb-2">
                <div class="col-sm-4"><strong>İşlem Tarihi:</strong></div>
                <div class="col-sm-8">@DateTime.Now.ToString("dd.MM.yyyy HH:mm")</div>
            </div>
        </div>

        <!-- Yardım Bölümü -->
        <div class="mb-4">
            <h6 class="text-secondary mb-3">
                <i class="bi bi-lightbulb me-2"></i>💡 Yaygın Sorunlar ve Çözümler:
            </h6>

            <div class="accordion" id="helpAccordion">
                <div class="card mb-2">
                    <div class="card-header bg-light">
                        <strong>🔐 3D Secure Sorunu</strong>
                    </div>
                    <div class="card-body">
                        • 3D Secure şifrenizi doğru girdiğinizden emin olun<br>
                        • SMS ile gelen doğrulama kodunu kontrol edin<br>
                        • Kartınızın 3D Secure özelliği aktif olmalı
                    </div>
                </div>

                <div class="card mb-2">
                    <div class="card-header bg-light">
                        <strong>💳 Kart Bilgileri Sorunu</strong>
                    </div>
                    <div class="card-body">
                        • Kart numaranızı, son kullanma tarihini ve CVC kodunu kontrol edin<br>
                        • Kartınızın internet alışverişi için aktif olduğundan emin olun<br>
                        • Kart limitinizi kontrol edin
                    </div>
                </div>

                <div class="card mb-2">
                    <div class="card-header bg-light">
                        <strong>💰 Bakiye Sorunu</strong>
                    </div>
                    <div class="card-body">
                        • Kartınızda yeterli bakiye bulunduğundan emin olun<br>
                        • Kredi kartı limitinizi kontrol edin<br>
                        • Günlük harcama limitinizi kontrol edin
                    </div>
                </div>
            </div>
        </div>

        <div class="d-grid gap-2">
            <a href="@Url.Action("Form", "Payment")" class="btn btn-warning btn-lg">
                <i class="bi bi-arrow-clockwise me-2"></i>🔄 Tekrar Dene
            </a>
            <div class="row g-2">
                <div class="col-6">
                    <a href="mailto:destek@example.com" class="btn btn-outline-secondary w-100">
                        <i class="bi bi-envelope me-1"></i>📧 Destek
                    </a>
                </div>
                <div class="col-6">
                    <a href="/" class="btn btn-outline-info w-100">
                        <i class="bi bi-house me-1"></i>🏠 Ana Sayfa
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>