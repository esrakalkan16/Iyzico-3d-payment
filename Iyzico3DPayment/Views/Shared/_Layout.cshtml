<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>@ViewBag.Title - İyzico Ödeme Sistemi</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-9ndCyUa8c/ggp4C+A4U6pKgKqV7j/sH5xXr1N5b5oXO5Q5V5v5V5v5V5v5V5v5V5" crossorigin="anonymous">

    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">

    <!-- Mevcut CSS dosyalarınız -->
    @Styles.Render("~/Content/css")

    <!-- Özel Styles Section -->
    @RenderSection("Styles", required: false)

    <!-- Favicon -->
    <link rel="icon" type="image/x-icon" href="~/favicon.ico">
</head>
<body class="bg-light">
    <!-- Ana İçerik -->
    <main>
        @RenderBody()
    </main>

    <!-- Footer (İsteğe bağlı) -->
    <footer class="mt-5 py-3 text-center text-muted">
        <div class="container">
            <small>
                © @DateTime.Now.Year İyzico Ödeme Sistemi.
                <i class="bi bi-shield-check text-success"></i> Güvenli Ödeme
            </small>
        </div>
    </footer>

    <!-- JavaScript Libraries -->
    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"
            integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>

    <!-- Bootstrap JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" crossorigin="anonymous"></script>

    <!-- Mevcut JS dosyalarınız -->
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")

    <!-- Özel Scripts Section -->
    @RenderSection("Scripts", required: false)

    <!-- Global JavaScript -->
    <script>
        // Genel fonksiyonlar
        $(document).ready(function () {
            // Toast mesajları için
            var toastElList = [].slice.call(document.querySelectorAll('.toast'));
            var toastList = toastElList.map(function (toastEl) {
                return new bootstrap.Toast(toastEl);
            });

            // Form validation
            $('form').on('submit', function () {
                $(this).find('button[type="submit"]').prop('disabled', true).html(
                    '<i class="bi bi-hourglass-split me-2"></i>İşleniyor...'
                );
            });
        });
    </script>
</body>
</html>